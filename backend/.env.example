# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas connection string with credentials
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=AppName
MONGODB_URI=DATABASE_URL=mongodb+srv://<username>:<password>@cluster0.mongodb.net/<database-name>

# ============================================
# SERVER CONFIGURATION
# ============================================
# Application server port
PORT=5000

# Node environment (development, production, staging)
NODE_ENV=development

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT secret key for signing tokens (use a strong, random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_here_min_32_chars

# ============================================
# FRONTEND & CORS CONFIGURATION
# ============================================
# Frontend application URL for CORS
FRONTEND_URL=http://localhost:5173

# Packer system URL (optional, defaults to FRONTEND_URL)
PACKER_SYSTEM_URL=http://localhost:5173

# ============================================
# EMAIL SERVICE (Gmail/Nodemailer)
# ============================================
# Gmail account email address
EMAIL_USER=your_gmail@gmail.com

# Gmail app password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_PASS=your_gmail_app_password

# ============================================
# TWILIO INTEGRATION (SMS & WhatsApp)
# ============================================
# Twilio Account SID
# Find at: https://www.twilio.com/console
TWILIO_SID=your_twilio_account_sid

# Twilio Auth Token
# Find at: https://www.twilio.com/console
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio phone number (for SMS/WhatsApp)
# Format: +1234567890
TWILIO_PHONE=+1234567890

# Owner/Admin phone number (for notifications)
# Format: +1234567890
OWNER_PHONE=+1234567890

# Admin phone number for low stock alerts
# Format: +1234567890
REACT_APP_ADMIN_PHONE_NUMBER=+1234567890
